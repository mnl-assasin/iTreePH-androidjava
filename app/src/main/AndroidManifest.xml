<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pwu.itree">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity
            android:name=".activity.MenuActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity android:name=".activity.SplashScreenV2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.tree.TreesV2Activity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.tree.SingleTreeActivity" />
        <activity
            android:name=".activity.quiz.QuizMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.quiz.QuizActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.quiz.QuizScoreActivity" />
        <activity android:name=".activity.quiz.QuizMainMenuActivity"></activity>
    </application>

</manifest>