<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/lightColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textColorPrimary">@color/textColorBlack</item>
        <item name="android:textColorSecondary">@color/textColorWhite</item>

        <item name="toolbarBackground">@color/lightColorPrimary</item>
        <item name="splashBackground">@color/forestGreen</item>
        <item name="tilesStroke">@color/forestGreen</item>
        <item name="tilesBackground">@color/forestGreen</item>
        <item name="dividerColor">@color/forestGreen</item>
        <item name="fabBackground">@color/lightColorPrimaryDark</item>
        <item name="blurryBackground">@color/white</item>
        <item name="mainBackground">@color/lightWindowBackground</item>
        <item name="secondaryBackground">@color/lightSecondaryBackground</item>
        <item name="buttonDefault">@color/lightColorPrimary</item>
        <item name="buttonSelected">@color/lightColorPrimaryDark</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/darkColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textColorSecondary">@color/textColorWhite</item>

        <item name="toolbarBackground">@color/darkColorPrimary</item>
        <item name="splashBackground">@color/darkWindowBackground</item>
        <item name="tilesStroke">@color/white</item>
        <item name="tilesBackground">@color/darkColorPrimary</item>
        <item name="dividerColor">@color/white</item>
        <item name="fabBackground">@color/darkColorPrimaryDark</item>
        <item name="blurryBackground">@color/black</item>
        <item name="mainBackground">@color/darkWindowBackground</item>
        <item name="secondaryBackground">@color/darkSecondaryBackground</item>
        <item name="buttonDefault">@color/darkColorPrimary</item>
        <item name="buttonSelected">@color/darkColorPrimaryDark</item>
    </style>

    <style name="CustomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/transition_in</item>
        <item name="android:activityOpenExitAnimation">@anim/transition_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/transition_in</item>
        <item name="android:activityCloseExitAnimation">@anim/transition_out</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="textWhiteOverlay">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.25</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
