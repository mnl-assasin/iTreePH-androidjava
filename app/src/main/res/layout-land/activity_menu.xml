<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MenuActivity">

    <include layout="@layout/toolbar_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivTree"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/background_stroke_green"
            android:padding="16dp"
            android:src="@drawable/img_tree" />

        <View
            android:layout_width="2dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivTreevia"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/background_green_rounded"
            android:padding="16dp"
            android:src="@drawable/img_tree" />

        <View
            android:layout_width="2dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivQuiz"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/background_green_rounded"
            android:padding="16dp"
            android:src="@drawable/img_quiz" />

        <View
            android:layout_width="2dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivAboutUs"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/background_stroke_green"
            android:padding="16dp"
            android:src="@drawable/img_aboutus" />

    </LinearLayout>
</LinearLayout>